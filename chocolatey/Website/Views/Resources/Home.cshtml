@model IEnumerable<ResourceViewModel>
@{
    ViewBag.Title = "Resources";
    Bundles.Reference("Content/dist/chocolatey.slim.css");
    Bundles.Reference("Scripts");
    Bundles.Reference("Scripts/CookiesNotice");
}

<div id="header" class="bg-medium-dark">
    <section class="py-3 py-lg-5">
        <div class="container py-lg-5 text-center">
            <h1 class="mb-0 display-3"><strong>Chocolatey Resource Library</strong></h1>
        </div>
    </section>
    <div class="shape-border shape-border-bottom"></div>
</div>
<section>
    <div class="container">
        <div class="row home-list">
            <div class="col-lg-4 col-sm-6 mb-4">
                <a href="@Url.RouteUrl(RouteName.Courses)">
                    <div class="card h-100">
                        <div class="card-body p-0 d-flex justify-content-center flex-column text-center">
                            <span class="fas fa-bullhorn display-1"></span>
                            <h1 class="mb-0">Getting Started</h1>
                        </div>
                        <div class="card-footer">
                            <p class="mb-0">Follow this step-by-step guide to get up and running with Chocolatey fast</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6 mb-4">
                <a href="@Url.RouteUrl(RouteName.Docs, new {docName = "home"})">
                    <div class="card h-100">
                        <div class="card-body p-0 d-flex justify-content-center flex-column text-center">
                            <span class="fas fa-file display-1"></span>
                            <h1 class="mb-0">Docs</h1>
                        </div>
                        <div class="card-footer">
                            <p class="mb-0">Read the docs to discover in depth articles on everything Chocolatey</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6 mb-4">
                <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "case-studies"})">
                    <div class="card h-100">
                        <div class="card-body p-0 d-flex justify-content-center flex-column text-center">
                            <span class="fas fa-briefcase display-1"></span>
                            <h1 class="mb-0">Case Studies</h1>
                        </div>
                        <div class="card-footer">
                            <p class="mb-0">Get detailed information on how Chocolatey is utilized throughout the community</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6 mb-4">
                <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "videos"})">
                    <div class="card h-100">
                        <div class="card-body p-0 d-flex justify-content-center flex-column text-center">
                            <span class="fas fa-play display-1"></span>
                            <h1 class="mb-0">Videos</h1>
                        </div>
                        <div class="card-footer">
                            <p class="mb-0">Chocolatey talks, success stories, case studies, demo videos, and more</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6 mb-4">
                <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "success-stories"})">
                    <div class="card h-100">
                        <div class="card-body p-0 d-flex justify-content-center flex-column text-center">
                            <span class="fas fa-star display-1"></span>
                            <h1 class="mb-0">Success Stories</h1>
                        </div>
                        <div class="card-footer">
                            <p class="mb-0">Watch numerous success story videos on how Chocolatey has impacted business you trust</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6 mb-4">
                <a href="@Url.RouteUrl(RouteName.BlogHome)">
                    <div class="card h-100">
                        <div class="card-body p-0 d-flex justify-content-center flex-column text-center">
                            <span class="fas fa-rss display-1"></span>
                            <h1 class="mb-0">Blog</h1>
                        </div>
                        <div class="card-footer">
                            <p class="mb-0">Read the latest news about Chocolatey through our official blog</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<div id="resources-featured" class="bg-medium-dark">
    <div class="shape-border shape-border-top shape-border-light"></div>
    <section class="py-3 py-lg-5">
        <div class="container">
            <h1 class="mb-5 text-center"><strong>Featured Resources</strong></h1>
            <div class="row resource-list resource-d-3">
                @foreach (var post in @Model)
                {
                    if (post.Tags.Contains("featured"))
                    {

                        <div class="col-lg-4 col-sm-6 mb-4">
                            <a href="
                               @if (post.Type.Contains("Customer Success Story"))
                                {
                                    @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "success-stories", resourceName = post.UrlPath })
                                }
                                else if (post.Type.Contains("Video"))
                                {
                                    @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "videos", resourceName = post.UrlPath })
                                }
                                else if (post.Type.Contains("Case Study"))
                                {
                                    @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "case-studies", resourceName = post.UrlPath })
                                }
                            ">
                                <div class="card h-100">
                                    <div class="card-header font-weight-bold bg-medium-light text-dark text-center">
                                        @if (post.Type.Contains("Customer Success Story"))
                                        {
                                            <span class="fas fa-star" alt="Customer Success Stories"></span>
                                        }
                                        else if (post.Type.Contains("Video"))
                                        {
                                            <span class="fas fa-play" alt="Videos"></span>
                                        }
                                        else if (post.Type.Contains("Case Study"))
                                        {
                                            <span class="fas fa-briefcase" alt="Case Studies"></span>
                                        }
                                        <span>@post.Type</span>
                                    </div>
                                    <div class="card-body p-0">
                                        @if (post.Type.Contains("Customer Success Story"))
                                        {
                                            @Html.Raw(post.Image)
                                        }
                                        else if (post.Type.Contains("Video"))
                                        {
                                            @Html.Raw(post.Image)
                                        }
                                        else if (post.Type.Contains("Case Study"))
                                        {
                                            @Html.Raw(post.Image)
                                        }
                                    </div>
                                    <div class="card-footer">
                                        @if (post.Type.Contains("Customer Success Story"))
                                        {
                                            <h5>@post.Company</h5>
                                            <p><small><i>@post.Name, @post.Position</i></small></p>
                                        }
                                        else if (post.Type.Contains("Video") || post.Type.Contains("Case Study"))
                                        {
                                            <h5>@post.Title</h5>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            <div class="row text-center">
                <div class="col-12">
                    <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "videos"})" class="btn btn-light">See More Videos</a>
                </div>
            </div>
        </div>
    </section>
    <div class="shape-border shape-border-bottom"></div>
</div>
<section id="resources-success-stories" class="pb-3 pb-lg-5">
    <div class="container">
        <h1 class="mb-5 text-center"><strong>Success Stories</strong></h1>
        <div class="row resource-list resource-d-3">
            @foreach (var post in @Model)
            {
                if (post.Tags.Contains("success-story"))
                {
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <a href="@Url.RouteUrl(RouteName.ResourceName, new { resourceType= "success-stories", resourceName = post.UrlPath })">
                            <div class="card h-100">
                                <div class="card-header font-weight-bold bg-medium-light text-center">
                                    <span class="fas fa-star" alt="Customer Success Stories"></span>
                                    <span>@post.Type</span>
                                </div>
                                <div class="card-body p-0">
                                    @Html.Raw(post.Image)
                                </div>
                                <div class="card-footer">
                                    <h5>@post.Company</h5>
                                    <p><small><i>@post.Name, @post.Position</i></small></p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
        <div class="row text-center">
            <div class="col-12">
                <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "success-stories"})" class="btn btn-primary">See More Success Stories</a>
            </div>
        </div>
    </div>
</section>
<section id="resources-case-studies" class="pt-3 pt-lg-5 bg-white">
    <div class="container">
        <h1 class="mb-5 text-center"><strong>Case Studies</strong></h1>
        <div class="row resource-list resource-d-3">
            @foreach (var post in @Model)
            {
                if (post.Type.Contains("Case Study"))
                {
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <a href="@Url.RouteUrl(RouteName.ResourceName, new { resourceType= "case-studies", resourceName = post.UrlPath })">
                            <div class="card h-100">
                                <div class="card-header font-weight-bold bg-medium-light text-center">
                                    <span class="fas fa-briefcase" alt="Case Studies"></span>
                                    <span>@post.Type</span>
                                </div>
                                <div class="card-body p-0">
                                    @Html.Raw(post.Image)
                                </div>
                                <div class="card-footer">
                                    <h5>@post.Title</h5>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
        <div class="row text-center">
            <div class="col-12">
                <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "case-studies"})" class="btn btn-primary">See More Case Studies</a>
            </div>
        </div>
    </div>
</section>
<div class="bg-primary border-0">
    <div class="shape-border shape-border-top"></div>
    <section class="py-3 py-lg-5">
        <div class="container">
            <div class="row mb-3 text-center text-white">
                <div class="col-12">
                    <h1><strong>Get started with your free Chocolatey for Business trial today!</strong></h1>
                    <h2>Begin managing your software in a better way.</h2>
                    <a class="btn btn-lg btn-outline-light mt-3" href="@Url.RouteUrl(RouteName.ContactUs)">Schedule a Demo</a>
                    <a class="btn btn-lg btn-light mt-3" href="@Url.RouteUrl(RouteName.Pricing)">Get Started</a>
                </div>
            </div>
        </div>
    </section>
    <div class="shape-border shape-border-bottom shape-border-white"></div>
</div>
<section class="pb-3 pb-lg-5 bg-white">
    <div class="container">
        <div class="row resource-d-3 shuffle">
            @Html.Partial("~/Views/Pages/_WrittenTestimonials.cshtml")
        </div>
        <div class="text-center">
            <a href="@Url.RouteUrl(RouteName.Resources, new {resourceType = "testimonials"})" class="btn btn-primary">See More Testimonials</a>
        </div>
    </div>
</section>
<section class="py-3 py-lg-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 updated-list resource-d-6">
                <h3>Recently Updated Resources</h3>
                <hr />
                @foreach (var post in @Model)
                {
                    <a href="
                    @if (post.Type.Contains("Customer Success Story"))
                    {
                        @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "success-stories", resourceName = post.UrlPath })
                    }
                    else if (post.Type.Contains("Video"))
                    {
                        @Url.RouteUrl(RouteName.ResourceName, new {resourceType= "videos", resourceName = post.UrlPath })
                    }
                    else if (post.Type.Contains("Case Study"))
                    {
                        @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "case-studies", resourceName = post.UrlPath })
                    }
                    ">
                        <div>
                            @post.Title
                            <br />
                            <span>@post.Published.GetValueOrDefault().ToLongDateString()</span>
                        </div>
                        <hr />
                    </a>
                }
            </div>
            <div class="col-md-6 helpful-list resource-d-3">
                <h3>Helpful Resources</h3>
                <hr />
                @foreach (var post in @Model)
                {
                    if (post.Tags.Contains("featured"))
                    {
                        <a href="
                        @if (post.Type.Contains("Customer Success Story"))
                        {
                            @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "success-stories", resourceName = post.UrlPath })
                        }
                        else if (post.Type.Contains("Video"))
                        {
                            @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "videos", resourceName = post.UrlPath })
                        }
                        else if (post.Type.Contains("Case Study"))
                        {
                            @Url.RouteUrl(RouteName.ResourceName, new { resourceType= "case-studies", resourceName = post.UrlPath })
                        }
                        ">
                            <div class="bg-white p-2 mb-4 shadow-sm">
                                @post.Title
                                <br />
                                @if (post.Summary.Length < 100)
                                {
                                    <span>@post.Summary</span>
                                }
                                else
                                {
                                    <span>@post.Summary.Substring(0, 100)<text>...</text></span>
                                }
                            </div>
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</section>